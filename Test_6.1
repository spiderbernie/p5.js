//Estudio de movimiento a partir de una unica variable "t"



function setup() {
  createCanvas(720, 400);
  stroke(255);
  frameRate(30);
}

var t = 0;


function draw() {
  background(255);
  stroke(0);
  
  {t = t + 1;
  }
  
  {if (t > height)
  t = 0;
    {let i = 0;
    for(i=0;i < height; i += 20) {
      line(0, t+i, width, t+i);
      line(0, t-i, width, t-i);
      }
    }
  }
  
  {if (t > width)
  t = 0;
    {let i = 0;
    for(i=0;i < width; i += 20) {
      line(t+i, 0, t+i, height);
      line(t-i, 0, t-i, height);
      }
    }
  }
  
  
  
}
